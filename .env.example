CAPTION="webzfs 0.55 alpha"
SECRET_KEY="CHANGE_ME_GENERATE_NEW_KEY"
AUTH_SESSION_EXPIRES_SECONDS=36000

# Server Configuration
# Port 26619: Z(26th letter) F(6th letter) S(19th letter) = ZFS
# BIND_IP: IP address to bind the server to (default: 127.0.0.1 for localhost only)
#          Use 0.0.0.0 to allow access from all network interfaces
BIND_IP=127.0.0.1
PORT=26619

# Unix Socket Configuration (optional, for reverse proxy setups)
# Use BIND instead of BIND_IP/PORT to listen on a unix socket
# Example: BIND=unix:/run/webzfs/webzfs.sock
# BIND=
#
# Socket file permissions (umask) - only applies when using unix sockets
# 0o007 = owner and group can access (default, recommended for reverse proxy)
# 0o077 = owner only (most restrictive)
# 0o000 = world readable/writable (not recommended)
# SOCKET_UMASK=0o007

# Email Notification Settings
SMTP_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_ADDRESS=webzfs@localhost
SMTP_NOTIFY_ON_SUCCESS=false
NOTIFICATION_RECIPIENTS=admin@example.com

# Audit Logging Settings
# Logs are stored in ~/.config/webzfs/logs/
# Three log files are created:
#   - auth.log: Authentication attempts (login/logout, rate limiting)
#   - zfs_operations.log: ZFS operations (pools, datasets, snapshots)
#   - file_access.log: File system access (read/write operations)
# Log files rotate automatically at 10MB with 5 backup files kept
