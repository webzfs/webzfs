{% extends "layout.jinja" %}

{% set active_page = 'dashboard' %}

{% block content %}
    <style>
        @keyframes pulse-border-danger {
            0%, 100% {
                border-color: rgb(239 68 68);
                box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7),
                            0 0 0 3px rgba(239, 68, 68, 0.4),
                            0 0 0 6px rgba(239, 68, 68, 0.1);
            }
            50% {
                border-color: rgba(239, 68, 68, 0.5);
                box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.3),
                            0 0 0 3px rgba(239, 68, 68, 0.2),
                            0 0 0 6px rgba(239, 68, 68, 0.05);
            }
        }
        @keyframes pulse-border-warning {
            0%, 100% {
                border-color: rgb(234 179 8);
                box-shadow: 0 0 0 0 rgba(234, 179, 8, 0.7),
                            0 0 0 3px rgba(234, 179, 8, 0.4),
                            0 0 0 6px rgba(234, 179, 8, 0.1);
            }
            50% {
                border-color: rgba(234, 179, 8, 0.5);
                box-shadow: 0 0 0 0 rgba(234, 179, 8, 0.3),
                            0 0 0 3px rgba(234, 179, 8, 0.2),
                            0 0 0 6px rgba(234, 179, 8, 0.05);
            }
        }
        .pulse-border-danger {
            animation: pulse-border-danger 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
            border: 4px solid rgb(239 68 68);
        }
        .pulse-border-warning {
            animation: pulse-border-warning 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
            border: 4px solid rgb(234 179 8);
        }
    </style>
    <div class="space-y-6">
        <!-- Page Header -->
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-text-primary">System Dashboard</h1>
                <p class="text-text-secondary mt-1">Overview of system resources and ZFS pools</p>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            
            <!-- Left Column: System Information -->
            <div class="space-y-6">
                <!-- System Info Card -->
                <div class="card animate-fade-in">
                    <div class="card-body">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2 bg-primary-500/10 border border-primary-500/20 rounded-lg">
                                <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <h2 class="text-xl font-semibold text-text-primary">System Information</h2>
                        </div>
                        {% if platform %}
                            {% with data=platform %}
                                {% include "dashboard/table.jinja" %}
                            {% endwith %}
                        {% endif %}
                    </div>
                </div>

                <!-- Memory Info Card -->
                <div class="card animate-fade-in" style="animation-delay: 0.1s;">
                    <div class="card-body">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2 bg-success-500/10 border border-success-500/20 rounded-lg">
                                <svg class="w-6 h-6 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                                </svg>
                            </div>
                            <h2 class="text-xl font-semibold text-text-primary">Memory Information</h2>
                        </div>
                        {% if memory %}
                            {% with data=memory %}
                                {% include "dashboard/table.jinja" %}
                            {% endwith %}
                        {% endif %}
                    </div>
                </div>

                <!-- System Load Card -->
                <div class="card animate-fade-in" 
                     style="animation-delay: 0.2s;">
                    <div class="card-body">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2 bg-info-500/10 border border-info-500/20 rounded-lg">
                                <svg class="w-6 h-6 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            </div>
                            <h2 class="text-xl font-semibold text-text-primary">System Load</h2>
                            <svg class="w-4 h-4 text-text-tertiary htmx-indicator ml-auto animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </div>
                        {% if system_load %}
                            <div class="overflow-x-auto"
                                 hx-get="/system-load-values"
                                 hx-trigger="every 1s"
                                 hx-swap="none">
                                <table class="min-w-full">
                                    <tbody>
                                        {% for key, value in system_load.items() %}
                                        <tr>
                                            <td class="px-4 py-2 text-sm text-text-secondary">{{ key }}</td>
                                            <td class="px-4 py-2 text-sm font-medium text-text-primary">
                                                <span id="system-load-{{ loop.index }}">{{ value }}</span>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Right Column: ZFS Pools -->
            <div class="space-y-6">
                <div class="card animate-fade-in" style="animation-delay: 0.3s;">
                    <div class="card-body">
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2 bg-purple-500/10 border border-purple-500/20 rounded-lg">
                                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                                </svg>
                            </div>
                            <h2 class="text-xl font-semibold text-text-primary">ZFS Pools</h2>
                            <button type="button"
                                    class="ml-auto p-1.5 rounded-lg hover:bg-bg-elevated-3 text-text-secondary hover:text-text-primary transition-colors"
                                    hx-get="/zfs-pools-refresh"
                                    hx-target="#zfs-pools-content"
                                    hx-swap="innerHTML"
                                    hx-indicator="#zfs-pools-spinner"
                                    title="Refresh pool information">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                            </button>
                            <svg id="zfs-pools-spinner" class="w-4 h-4 text-text-tertiary htmx-indicator animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </div>
                        <div id="zfs-pools-content">
                            {% include "dashboard/zfs_pools.jinja" %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
