{% extends "layout_main.jinja" %}

{% block content %}
<div class="container-page max-w-5xl">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li><a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li><a href="/zfs/replication" class="text-primary-400 hover:text-primary-300 transition-colors">Replication</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">Syncoid</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-text-primary mb-2">Syncoid Replication</h1>
        <p class="text-text-secondary">Advanced ZFS replication using Syncoid with automatic incremental sync</p>
    </div>

    <!-- Messages -->
    {% if error %}
        <div id="error-message" class="bg-danger-900/30 border border-danger-700 text-danger-400 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span><strong>Error:</strong> {{ error }}</span>
        </div>
    {% endif %}

    {% if request.query_params.get('message') %}
        <div id="success-message" class="bg-success-900/30 border border-success-700 text-success-400 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>{{ request.query_params.get('message') }}</span>
        </div>
    {% endif %}

    {% if not syncoid_status.installed %}
        <div class="bg-warning-900/30 border border-warning-700 text-warning-400 px-4 py-3 rounded-lg mb-6 flex items-start">
            <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div>
                <strong class="font-semibold">Warning:</strong> Syncoid is not installed on this system. 
                {% if system == 'FreeBSD' %}
                <div class="mt-2 bg-bg-elevated-3 p-2 rounded border border-border-default inline-block">
                    <code class="text-xs text-warning-400">pkg install sanoid</code>
                </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

    <!-- Execute Syncoid Form -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Execute Syncoid Replication
            </h2>
        </div>
        <div class="card-body">
            <form method="post" action="/zfs/replication/syncoid/execute" id="syncoid-form">
                
                <!-- Step 1: Source Connection & Dataset -->
                <div class="mb-6">
                    <h3 class="font-semibold text-lg mb-4 text-text-primary flex items-center">
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-primary-500 text-white text-sm font-bold mr-2">1</span>
                        Source
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="form-label" for="source_ssh_connection">
                                Source Connection
                            </label>
                            <select name="source_ssh_connection_id" id="source_ssh_connection" class="form-select">
                                <option value="">Local (this system)</option>
                                {% if ssh_connections and ssh_connections|length > 0 %}
                                    {% for conn in ssh_connections %}
                                    <option value="{{ conn.id }}" 
                                            data-host="{{ conn.host }}" 
                                            data-username="{{ conn.username }}" 
                                            data-port="{{ conn.port }}">
                                        {{ conn.name }} ({{ conn.username }}@{{ conn.host }}{% if conn.port != 22 %}:{{ conn.port }}{% endif %})
                                    </option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                            <p class="text-text-tertiary text-xs mt-1">Select source system or leave as Local</p>
                        </div>

                        <div>
                            <label class="form-label" for="source">
                                Source Dataset <span class="text-danger-400">*</span>
                            </label>
                            <div class="relative">
                                <select name="source" id="source" required class="form-select">
                                    <option value="">-- Loading datasets... --</option>
                                </select>
                                <div id="source-loading" class="hidden absolute right-10 top-1/2 -translate-y-1/2">
                                    <div class="loading-spinner loading-spinner-sm"></div>
                                </div>
                            </div>
                            <p id="source-status" class="text-text-tertiary text-xs mt-1">Select a connection to load datasets</p>
                        </div>
                    </div>
                </div>

                <!-- Step 2: Target Connection & Dataset -->
                <div class="mb-6">
                    <h3 class="font-semibold text-lg mb-4 text-text-primary flex items-center">
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-success-500 text-white text-sm font-bold mr-2">2</span>
                        Target
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="form-label" for="target_ssh_connection">
                                Target Connection
                            </label>
                            <select name="target_ssh_connection_id" id="target_ssh_connection" class="form-select">
                                <option value="">Local (this system)</option>
                                {% if ssh_connections and ssh_connections|length > 0 %}
                                    {% for conn in ssh_connections %}
                                    <option value="{{ conn.id }}" 
                                            data-host="{{ conn.host }}" 
                                            data-username="{{ conn.username }}" 
                                            data-port="{{ conn.port }}">
                                        {{ conn.name }} ({{ conn.username }}@{{ conn.host }}{% if conn.port != 22 %}:{{ conn.port }}{% endif %})
                                    </option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                            <p class="text-text-tertiary text-xs mt-1">Select target system or leave as Local</p>
                        </div>

                        <div>
                            <label class="form-label" for="target">
                                Target Dataset <span class="text-danger-400">*</span>
                            </label>
                            <div class="relative">
                                <select name="target" id="target" required class="form-select">
                                    <option value="">-- Loading datasets... --</option>
                                </select>
                                <div id="target-loading" class="hidden absolute right-10 top-1/2 -translate-y-1/2">
                                    <div class="loading-spinner loading-spinner-sm"></div>
                                </div>
                            </div>
                            <p id="target-status" class="text-text-tertiary text-xs mt-1">Select a connection to load datasets</p>
                        </div>
                    </div>
                </div>

                <!-- Hidden fields for form submission -->
                <input type="hidden" name="source_host" id="source_host" value="">
                <input type="hidden" name="target_host" id="target_host" value="">
                <input type="hidden" name="ssh_port" id="ssh_port" value="22">
                
                {% if not ssh_connections or ssh_connections|length == 0 %}
                <div class="mb-6 bg-warning-900/30 border border-warning-700 text-warning-400 px-4 py-3 rounded-lg">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <div>
                            <p class="font-medium">No SSH connections configured</p>
                            <p class="text-sm mt-1">Configure SSH connections to enable remote replication.</p>
                            <a href="/utils/ssh/add" class="btn-warning btn-sm mt-2 inline-flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                                </svg>
                                Add SSH Connection
                            </a>
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Advanced Options Section -->
                <div class="mb-6">
                    <h3 class="font-semibold text-lg mb-4 text-text-primary flex items-center">
                        <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-info-500 text-white text-sm font-bold mr-2">3</span>
                        Advanced Options
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label class="form-label" for="compress">
                                Compression Algorithm
                            </label>
                            <select name="compress" id="compress" class="form-select">
                                <option value="">Default</option>
                                <option value="lz4">lz4</option>
                                <option value="zstd">zstd</option>
                                <option value="gzip">gzip</option>
                                <option value="xz">xz</option>
                                <option value="none">none</option>
                            </select>
                        </div>

                        <div>
                            <label class="form-label" for="source_bwlimit">
                                Source Bandwidth Limit
                            </label>
                            <input type="text" name="source_bwlimit" id="source_bwlimit" class="form-input" placeholder="e.g., 10M, 1G">
                        </div>

                        <div>
                            <label class="form-label" for="target_bwlimit">
                                Target Bandwidth Limit
                            </label>
                            <input type="text" name="target_bwlimit" id="target_bwlimit" class="form-input" placeholder="e.g., 10M, 1G">
                        </div>
                    </div>
                </div>

                <!-- Options Section -->
                <div class="mb-6">
                    <h3 class="font-semibold text-lg mb-4 text-text-primary">Replication Options</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        <label class="flex items-center">
                            <input type="checkbox" name="recursive" value="true" class="form-checkbox">
                            <span class="ml-3 text-text-secondary">Recursive (replicate child datasets)</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="no_sync_snap" value="true" class="form-checkbox">
                            <span class="ml-3 text-text-secondary">Don't create sync snapshots</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="skip_parent" value="true" class="form-checkbox">
                            <span class="ml-3 text-text-secondary">Skip parent dataset</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="create_bookmark" value="true" class="form-checkbox">
                            <span class="ml-3 text-text-secondary">Create bookmarks</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="force_delete" value="true" class="form-checkbox">
                            <span class="ml-3 text-text-secondary">Force delete conflicts</span>
                        </label>
                        <label class="flex items-center">
                            <input type="checkbox" name="dry_run" value="true" class="form-checkbox">
                            <span class="ml-3 text-text-secondary">Dry run (preview only, no changes)</span>
                        </label>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center justify-between pt-4 border-t border-border-subtle">
                    <button type="submit" class="btn-primary" {% if not syncoid_status.installed %}disabled{% endif %}>
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        Execute Syncoid
                    </button>
                    <a href="/zfs/replication" class="btn-secondary">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Back
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- SSH Connection Management -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                </svg>
                SSH Connection Management
            </h2>
        </div>
        <div class="card-body">
            <p class="text-text-secondary mb-4">
                Remote replication requires SSH key-based authentication. Manage your SSH connections to remote ZFS servers.
            </p>
            <div class="flex items-center gap-3">
                <a href="/utils/ssh" class="btn-success inline-flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    Manage SSH Connections
                </a>
                <a href="/utils/ssh/add" class="btn-primary inline-flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Add New Connection
                </a>
            </div>
            
            {% if ssh_connections and ssh_connections|length > 0 %}
            <div class="mt-4">
                <p class="text-sm text-text-tertiary mb-2">Configured connections ({{ ssh_connections|length }}):</p>
                <div class="flex flex-wrap gap-2">
                    {% for conn in ssh_connections %}
                    <span class="badge-info text-xs">{{ conn.name }}</span>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Syncoid Features -->
    <div class="card-nested bg-info-900/20 border-info-700">
        <h3 class="font-semibold mb-3 text-text-primary flex items-center">
            <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Syncoid Features
        </h3>
        <ul class="space-y-2 text-sm text-text-secondary">
            <li class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 text-info-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Automatic incremental replication with snapshot management</span>
            </li>
            <li class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 text-info-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Bandwidth limiting for controlled transfers</span>
            </li>
            <li class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 text-info-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Compression support for faster transfers</span>
            </li>
            <li class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 text-info-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Recursive replication of dataset hierarchies</span>
            </li>
            <li class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 text-info-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Bookmark support for better snapshot management</span>
            </li>
            <li class="flex items-start">
                <svg class="w-4 h-4 mr-2 mt-0.5 text-info-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Dry-run mode to preview changes before execution</span>
            </li>
        </ul>
    </div>
</div>

<script>
(function() {
    const sourceSshSelect = document.getElementById('source_ssh_connection');
    const targetSshSelect = document.getElementById('target_ssh_connection');
    const sourceDatasetSelect = document.getElementById('source');
    const targetDatasetSelect = document.getElementById('target');
    const sourceHostInput = document.getElementById('source_host');
    const targetHostInput = document.getElementById('target_host');
    const sshPortInput = document.getElementById('ssh_port');
    const sourceLoading = document.getElementById('source-loading');
    const targetLoading = document.getElementById('target-loading');
    const sourceStatus = document.getElementById('source-status');
    const targetStatus = document.getElementById('target-status');
    
    // Fetch datasets for a connection
    async function fetchDatasets(connectionId, datasetSelect, loadingEl, statusEl, hostInput, isSource) {
        loadingEl.classList.remove('hidden');
        datasetSelect.innerHTML = '<option value="">-- Loading... --</option>';
        datasetSelect.disabled = true;
        statusEl.textContent = 'Loading datasets...';
        statusEl.className = 'text-info-400 text-xs mt-1';
        
        try {
            const response = await fetch('/zfs/replication/api/get-remote-datasets', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ ssh_connection_id: connectionId || null })
            });
            
            const data = await response.json();
            
            if (data.success) {
                datasetSelect.innerHTML = '<option value="">-- Select Dataset --</option>';
                data.datasets.forEach(ds => {
                    const option = document.createElement('option');
                    option.value = ds;
                    option.textContent = ds;
                    datasetSelect.appendChild(option);
                });
                
                datasetSelect.disabled = false;
                statusEl.textContent = data.is_local 
                    ? `${data.datasets.length} local datasets available` 
                    : `${data.datasets.length} datasets from ${data.connection_name}`;
                statusEl.className = 'text-success-400 text-xs mt-1';
                
                // Update the hidden host field
                if (connectionId) {
                    const selectedOption = (isSource ? sourceSshSelect : targetSshSelect).options[(isSource ? sourceSshSelect : targetSshSelect).selectedIndex];
                    const host = selectedOption.dataset.host;
                    const username = selectedOption.dataset.username;
                    const port = selectedOption.dataset.port;
                    hostInput.value = `${username}@${host}`;
                    
                    // Update port
                    if (isSource && !targetSshSelect.value) {
                        sshPortInput.value = port;
                    } else if (!isSource) {
                        sshPortInput.value = port;
                    }
                } else {
                    hostInput.value = '';
                }
            } else {
                datasetSelect.innerHTML = '<option value="">-- Error loading --</option>';
                statusEl.textContent = data.error || 'Failed to load datasets';
                statusEl.className = 'text-danger-400 text-xs mt-1';
            }
        } catch (error) {
            datasetSelect.innerHTML = '<option value="">-- Error --</option>';
            statusEl.textContent = 'Connection error: ' + error.message;
            statusEl.className = 'text-danger-400 text-xs mt-1';
        } finally {
            loadingEl.classList.add('hidden');
        }
    }
    
    // Handle source connection change
    sourceSshSelect.addEventListener('change', function() {
        fetchDatasets(this.value, sourceDatasetSelect, sourceLoading, sourceStatus, sourceHostInput, true);
    });
    
    // Handle target connection change
    targetSshSelect.addEventListener('change', function() {
        fetchDatasets(this.value, targetDatasetSelect, targetLoading, targetStatus, targetHostInput, false);
    });
    
    // Load local datasets on page load
    fetchDatasets('', sourceDatasetSelect, sourceLoading, sourceStatus, sourceHostInput, true);
    fetchDatasets('', targetDatasetSelect, targetLoading, targetStatus, targetHostInput, false);
})();
</script>
{% endblock %}
