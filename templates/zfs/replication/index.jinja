{% extends "layout_main.jinja" %}

{% block content %}
<div class="container-page max-w-7xl">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li><a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">ZFS Replication</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-text-primary mb-2">ZFS Replication Management</h1>
        <p class="text-text-secondary">Manage ZFS dataset replication with send/receive, Syncoid, and scheduled jobs</p>
    </div>

    <!-- Messages -->
    {% if error %}
        {% include "partials/error.jinja" with context %}
    {% endif %}

    {% if request.query_params.get('message') %}
        <div id="success-message" class="bg-success-900/30 border border-success-700 text-success-400 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>{{ request.query_params.get('message') }}</span>
        </div>
    {% endif %}

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <a href="/zfs/replication/send-receive/form" class="card group hover:scale-[1.02] transition-all duration-200">
            <div class="card-body">
                <div class="flex items-start mb-3">
                    <div class="p-3 bg-primary-900/50 border border-primary-700 rounded-lg mr-4">
                        <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h5 class="text-xl font-semibold text-text-primary mb-2 group-hover:text-primary-400 transition-colors">
                            ZFS Send/Receive
                        </h5>
                        <p class="text-text-secondary text-sm">Execute one-time ZFS send/receive operations</p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/zfs/replication/jobs/create/form" class="card group hover:scale-[1.02] transition-all duration-200">
            <div class="card-body">
                <div class="flex items-start mb-3">
                    <div class="p-3 bg-success-900/50 border border-success-700 rounded-lg mr-4">
                        <svg class="w-6 h-6 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h5 class="text-xl font-semibold text-text-primary mb-2 group-hover:text-success-400 transition-colors">
                            Schedule Job
                        </h5>
                        <p class="text-text-secondary text-sm">Create scheduled replication jobs</p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/zfs/replication/syncoid" class="card group hover:scale-[1.02] transition-all duration-200">
            <div class="card-body">
                <div class="flex items-start mb-3">
                    <div class="p-3 bg-info-900/50 border border-info-700 rounded-lg mr-4">
                        <svg class="w-6 h-6 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h5 class="text-xl font-semibold text-text-primary mb-2 group-hover:text-info-400 transition-colors">
                            Syncoid
                        </h5>
                        <p class="text-text-secondary text-sm mb-2">Use syncoid for advanced replication</p>
                        {% if syncoid_status.installed %}
                            <span class="badge-success text-xs">
                                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                Installed
                            </span>
                        {% else %}
                            <span class="badge-danger text-xs">
                                <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                                Not Installed
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Scheduled Replication Jobs -->
    <div class="card mb-8">
        <div class="px-6 py-4 border-b border-border-subtle flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
                <h2 class="text-xl font-semibold text-text-primary flex items-center">
                    <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Scheduled Replication Jobs
                </h2>
                {% if jobs %}
                    <p class="text-sm text-text-secondary mt-1">{{ jobs|length }} job(s) configured</p>
                {% endif %}
            </div>
            <a href="/zfs/replication/jobs/create/form" class="btn-success inline-flex items-center whitespace-nowrap">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Create Job
            </a>
        </div>
        <div class="p-6">
            {% if jobs %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-border-subtle">
                    <thead>
                        <tr class="bg-bg-elevated-2">
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Source</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Target</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Schedule</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-subtle">
                        {% for job in jobs %}
                        <tr class="hover:bg-bg-elevated-2 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <a href="/zfs/replication/jobs/{{ job.id }}/detail" class="text-primary-400 hover:text-primary-300 font-medium transition-colors">
                                    {{ job.name }}
                                </a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap font-mono text-sm text-text-secondary">{{ job.source_dataset }}</td>
                            <td class="px-6 py-4 whitespace-nowrap font-mono text-sm text-text-secondary">{{ job.target_dataset }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="badge-info">
                                    {{ job.replication_type }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">{{ job.schedule }}</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if job.enabled %}
                                <span class="badge-success">
                                    <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    Enabled
                                </span>
                                {% else %}
                                <span class="px-2.5 py-1 rounded-full text-xs font-semibold bg-bg-elevated-3 text-text-secondary border border-border-default">
                                    <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    Disabled
                                </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex items-center gap-3">
                                    <a href="/zfs/replication/jobs/{{ job.id }}/detail" class="text-info-400 hover:text-info-300 transition-colors" title="Details">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </a>
                                    {% if job.enabled %}
                                    <form method="post" action="/zfs/replication/jobs/{{ job.id }}/disable" class="inline-flex">
                                        <button type="submit" class="inline-flex items-center text-warning-400 hover:text-warning-300 transition-colors bg-transparent border-0 p-0 cursor-pointer" title="Disable">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </button>
                                    </form>
                                    {% else %}
                                    <form method="post" action="/zfs/replication/jobs/{{ job.id }}/enable" class="inline-flex">
                                        <button type="submit" class="inline-flex items-center text-success-400 hover:text-success-300 transition-colors bg-transparent border-0 p-0 cursor-pointer" title="Enable">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </button>
                                    </form>
                                    {% endif %}
                                    <a href="/zfs/replication/jobs/{{ job.id }}/delete/confirm" class="text-danger-400 hover:text-danger-300 transition-colors" title="Delete">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-12">
                <svg class="w-16 h-16 mx-auto text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="text-text-secondary mb-4">No scheduled replication jobs configured.</p>
                <a href="/zfs/replication/jobs/create/form" class="btn-primary inline-flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Create Your First Job
                </a>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- System Status -->
    <div class="card mb-8">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Replication Tools Status
            </h2>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Native ZFS Send/Receive -->
                <div class="card-nested">
                    <h3 class="font-semibold text-lg mb-3 text-text-primary flex items-center">
                        <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                        </svg>
                        Native ZFS Send/Receive
                    </h3>
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-success-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="text-success-400 font-medium">Available</span>
                        </div>
                        <p class="text-sm text-text-secondary">Built-in ZFS replication using zfs send and zfs receive commands.</p>
                        <a href="/zfs/replication/send-receive/form" class="btn-primary mt-3 inline-flex">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                            </svg>
                            Use Send/Receive
                        </a>
                    </div>
                </div>

                <!-- Syncoid Status -->
                <div class="card-nested">
                    <h3 class="font-semibold text-lg mb-3 text-text-primary flex items-center">
                        <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        Syncoid
                    </h3>
                    {% if syncoid_status.installed %}
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-success-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="text-success-400 font-medium">Installed</span>
                        </div>
                        <div class="space-y-2 text-sm">
                            <p class="text-text-secondary"><span class="font-medium text-text-primary">Path:</span> <code class="text-info-400">{{ syncoid_status.path }}</code></p>
                            <p class="text-text-secondary"><span class="font-medium text-text-primary">Version:</span> <code class="text-info-400">{{ syncoid_status.version }}</code></p>
                        </div>
                        <a href="/zfs/replication/syncoid" class="btn-info mt-3 inline-flex">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            Use Syncoid
                        </a>
                    </div>
                    {% else %}
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-danger-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="text-danger-400 font-medium">Not Installed</span>
                        </div>
                        <p class="text-sm text-text-secondary">Syncoid is part of the sanoid package. Install it to enable advanced replication features.</p>
                        {% if system == 'FreeBSD' %}
                        <div class="bg-bg-elevated-3 p-3 rounded border border-border-default">
                            <code class="text-xs text-info-400">pkg install sanoid</code>
                        </div>
                        {% endif %}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Links -->
    <div class="text-center">
        <a href="/zfs/replication/history" class="text-primary-400 hover:text-primary-300 inline-flex items-center transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            View Replication History
        </a>
    </div>
</div>
{% endblock %}
