{% extends "layout.jinja" %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Breadcrumb Navigation -->
    <nav class="text-sm mb-6 text-text-tertiary">
        <a href="/utils/smart" class="hover:text-blue-400">SMART Monitoring</a> 
        <span class="mx-2">/</span> 
        <a href="/utils/smart/disk/{{ disk_path.lstrip('/') }}" class="hover:text-blue-400">{{ disk_path }}</a>
        <span class="mx-2">/</span> 
        <span class="text-text-primary">Attributes</span>
    </nav>

    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-text-primary">SMART Attributes: {{ disk_path }}</h1>
        <a href="/utils/smart/disk/{{ disk_path.lstrip('/') }}" class="btn-secondary hover:bg-bg-elevated-2 text-text-primary px-4 py-2 rounded inline-block">
            ‚Üê Back to Disk
        </a>
    </div>

    <!-- Device Info Summary -->
    {% if disk_info %}
    <div class="bg-bg-elevated rounded-lg p-4 mb-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
            {% if disk_info.model %}
            <div>
                <div class="text-text-tertiary">Model</div>
                <div class="text-text-primary font-mono">{{ disk_info.model }}</div>
            </div>
            {% endif %}
            {% if disk_info.serial %}
            <div>
                <div class="text-text-tertiary">Serial</div>
                <div class="text-text-primary font-mono">{{ disk_info.serial }}</div>
            </div>
            {% endif %}
            {% if disk_info.capacity %}
            <div>
                <div class="text-text-tertiary">Capacity</div>
                <div class="text-text-primary">{{ disk_info.capacity }}</div>
            </div>
            {% endif %}
            {% if disk_info.firmware %}
            <div>
                <div class="text-text-tertiary">Firmware</div>
                <div class="text-text-primary font-mono">{{ disk_info.firmware }}</div>
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <!-- SMART Attributes Table -->
    {% if attributes %}
    <div class="bg-bg-elevated rounded-lg overflow-hidden shadow-lg">
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead class="bg-bg-elevated-2 text-text-secondary">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">ID</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Attribute Name</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Value</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Worst</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Threshold</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Type</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Updated</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">When Failed</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Raw Value</th>
                    </tr>
                </thead>
                <tbody class="bg-bg-elevated divide-y divide-border-subtle">
                    {% for attr in attributes %}
                    <tr class="hover:bg-bg-elevated-2 transition-colors">
                        <td class="px-4 py-3 whitespace-nowrap text-text-secondary font-mono">{{ attr.id }}</td>
                        <td class="px-4 py-3 text-text-primary font-semibold">{{ attr.name }}</td>
                        <td class="px-4 py-3 whitespace-nowrap text-text-secondary font-mono">{{ attr.value }}</td>
                        <td class="px-4 py-3 whitespace-nowrap text-text-secondary font-mono">{{ attr.worst }}</td>
                        <td class="px-4 py-3 whitespace-nowrap text-text-secondary font-mono">{{ attr.thresh }}</td>
                        <td class="px-4 py-3 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs rounded {% if attr.type == 'Pre-fail' %}bg-yellow-900 text-yellow-300{% else %}bg-blue-900 text-blue-300{% endif %}">
                                {{ attr.type }}
                            </span>
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-text-tertiary text-sm">{{ attr.updated }}</td>
                        <td class="px-4 py-3 whitespace-nowrap">
                            {% if attr.when_failed == '-' %}
                            <span class="text-green-400">-</span>
                            {% else %}
                            <span class="text-red-400">{{ attr.when_failed }}</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-text-secondary font-mono text-sm">{{ attr.raw_value }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Attribute Count -->
    <div class="mt-4 text-text-tertiary text-sm">
        <p>Total Attributes: {{ attributes|length }}</p>
    </div>
    {% else %}
    <!-- No Attributes Found -->
    <div class="bg-bg-elevated rounded-lg p-8 text-center">
        <div class="text-text-tertiary mb-4">
            <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
        </div>
        <h3 class="text-lg font-medium text-text-primary mb-2">No SMART Attributes Found</h3>
        <p class="text-text-tertiary">No SMART attribute data is available for this disk.</p>
    </div>
    {% endif %}

    <!-- Info Box -->
    <div class="mt-6 bg-info-900/30 border-2 border-info-500/50 text-info-400 px-4 py-3 rounded">
        <strong><svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg> About SMART Attributes:</strong>
        <ul class="mt-2 text-sm list-disc list-inside space-y-1">
            <li><strong>Value:</strong> Normalized value</li>
            <li><strong>Worst:</strong> Worst value ever recorded</li>
            <li><strong>Threshold:</strong> Minimum value before failure is predicted</li>
            <li><strong>Pre-fail:</strong> Indicates imminent drive failure</li>
            <li><strong>Old_age:</strong> Indicates normal wear and tear</li>
            <li><strong>Raw Value:</strong> Actual measured value from the drive</li>
        </ul>
    </div>
</div>
{% endblock %}
