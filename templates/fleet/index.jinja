{% extends "layout_main.jinja" %}

{% block title %}Fleet View - {{ settings.CAPTION }}{% endblock %}

{% block content %}
<style>
  @keyframes pulse-border-danger {
    0%, 100% {
      border-color: rgb(239 68 68);
      box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7),
                  0 0 0 3px rgba(239, 68, 68, 0.4),
                  0 0 0 6px rgba(239, 68, 68, 0.1);
    }
    50% {
      border-color: rgba(239, 68, 68, 0.5);
      box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.3),
                  0 0 0 3px rgba(239, 68, 68, 0.2),
                  0 0 0 6px rgba(239, 68, 68, 0.05);
    }
  }
  @keyframes pulse-border-warning {
    0%, 100% {
      border-color: rgb(234 179 8);
      box-shadow: 0 0 0 0 rgba(234, 179, 8, 0.7),
                  0 0 0 3px rgba(234, 179, 8, 0.4),
                  0 0 0 6px rgba(234, 179, 8, 0.1);
    }
    50% {
      border-color: rgba(234, 179, 8, 0.5);
      box-shadow: 0 0 0 0 rgba(234, 179, 8, 0.3),
                  0 0 0 3px rgba(234, 179, 8, 0.2),
                  0 0 0 6px rgba(234, 179, 8, 0.05);
    }
  }
  .pulse-border-danger {
    animation: pulse-border-danger 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    border: 4px solid rgb(239 68 68);
  }
  .pulse-border-warning {
    animation: pulse-border-warning 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    border: 4px solid rgb(234 179 8);
  }
</style>
<div class="container-page py-8">
  
  {# Page Header #}
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-text-primary mb-2 flex items-center">
      <svg class="w-8 h-8 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
      </svg>
      Fleet View
    </h1>
    <p class="text-text-secondary">Monitor ZFS pools across multiple remote servers</p>
  </div>

  {# Read-Only Banner #}
  <div class="mb-6 p-4 bg-purple-500/10 border border-purple-500/30 rounded-lg flex items-start">
    <svg class="w-6 h-6 text-purple-400 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <div>
      <h3 class="font-semibold text-purple-400 mb-1">Read-Only Monitoring View</h3>
      <p class="text-text-secondary text-sm">
        This is a fleet-wide monitoring view. All management actions must be performed on each respective server directly.
        This interface only displays pool status information from remote servers via SSH.
      </p>
      <p class="text-text-secondary text-sm mt-2">
        <a href="https://github.com/webzfs/webzfs-fleet" target="_blank" class="text-purple-400 hover:text-purple-300 underline">webzfs-fleet</a> 
        is an in-development version that allows for full control of all your ZFS servers.
      </p>
    </div>
  </div>

  {# Success/Error Messages #}
  {% if request.query_params.get('success') %}
    {% include "partials/success.jinja" with context %}
  {% endif %}
  
  {% if request.query_params.get('error') %}
    {% include "partials/error.jinja" with context %}
  {% endif %}

  {# Action Buttons #}
  <div class="flex flex-wrap gap-3 mb-6">
    <a href="/fleet/servers/add" class="btn-primary inline-flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      Add Server
    </a>
    
    {% if servers %}
    <form action="/fleet/refresh" method="post" class="inline">
      <button type="submit" class="btn-success inline-flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Refresh All Servers
      </button>
    </form>
    
    <a href="/fleet/servers/remove" class="btn-secondary inline-flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
      Manage Servers
    </a>
    {% endif %}
  </div>

  {# Server Cards Grid #}
  {% if servers %}
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6 max-w-[1600px] mx-auto">
      {% for server in servers %}
        <div class="card border-l-4 border-l-purple-500">
          <div class="card-body">
            {# Server Header #}
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-text-primary mb-1">
                  {{ server.name }}
                </h3>
                <p class="text-sm text-text-secondary">
                  <span class="font-mono">{{ server.username }}@{{ server.ip }}:{{ server.port }}</span>
                </p>
              </div>
              
              {# Status Badge #}
              <span class="badge {% if server.status == 'online' %}badge-success{% elif server.status == 'offline' %}badge-secondary{% elif server.status == 'error' %}badge-danger{% else %}badge-info{% endif %}">
                {% if server.status == 'online' %}
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Online
                {% elif server.status == 'offline' %}
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  Offline
                {% elif server.status == 'error' %}
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Error
                {% else %}
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  Unknown
                {% endif %}
              </span>
            </div>

            {# Server Info #}
            <div class="mb-4 text-sm text-text-secondary">
              <div class="flex items-center mb-1">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Added: {{ server.added_at[:10] if server.added_at else 'N/A' }}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <span>Last checked: {{ server.last_checked[:19] if server.last_checked else 'Never' }}</span>
              </div>
            </div>

            {# Pool Information Section #}
            <div class="border-t border-border-subtle pt-4">
              <h4 class="text-sm font-semibold text-text-primary mb-3 flex items-center">
                <svg class="w-4 h-4 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                </svg>
                ZFS Pools
              </h4>
              
              {% if server.pools %}
                <div class="space-y-2">
                  {% for pool in server.pools %}
                    {% set cap_val = pool.capacity.rstrip('%') | int %}
                    <div class="card-nested overflow-hidden {% if pool.health == 'SUSPENDED' or pool.health == 'FAULTED' or pool.health == 'UNAVAIL' %}pulse-border-danger{% elif pool.health == 'DEGRADED' %}pulse-border-warning{% endif %}">
                      <table class="min-w-full text-sm">
                        <thead>
                          <tr class="text-xs font-medium text-text-secondary uppercase">
                            <th class="px-3 py-2 text-left"></th>
                            <th class="px-3 py-2 text-center">Size</th>
                            <th class="px-3 py-2 text-center">Allocated</th>
                            <th class="px-3 py-2 text-center">Free</th>
                            <th class="px-3 py-2 text-center">Capacity</th>
                            <th class="px-3 py-2 text-center">Health</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td class="px-3 py-2 font-semibold text-purple-400">
                              {{ pool.name }}
                            </td>
                            <td class="px-3 py-2 text-center text-text-primary">{{ pool.size }}</td>
                            <td class="px-3 py-2 text-center text-text-primary">{{ pool.allocated }}</td>
                            <td class="px-3 py-2 text-center text-text-primary">{{ pool.free }}</td>
                            <td class="px-3 py-2 text-center">
                              <div class="flex items-center justify-center gap-2">
                                <span class="text-text-primary">{{ pool.capacity }}</span>
                                <div class="w-16 bg-bg-elevated-3 rounded-full h-2">
                                  <div class="{% if cap_val > 90 %}bg-danger-500{% elif cap_val >= 80 %}bg-warning-500{% else %}bg-success-500{% endif %} h-2 rounded-full transition-all" style="width: {{ pool.capacity }}"></div>
                                </div>
                              </div>
                            </td>
                            <td class="px-3 py-2 text-center">
                              {% if pool.health == 'ONLINE' %}
                                <span class="badge-success text-xs">{{ pool.health }}</span>
                              {% elif pool.health == 'DEGRADED' %}
                                <span class="badge-warning text-xs">{{ pool.health }}</span>
                              {% else %}
                                <span class="badge-danger text-xs">{{ pool.health }}</span>
                              {% endif %}
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  {% endfor %}
                </div>
              {% else %}
                <p class="text-sm text-text-secondary italic">
                  No pool data available. Click refresh to fetch data.
                </p>
              {% endif %}
            </div>

            {# Action Buttons #}
            <div class="flex gap-2 mt-4 pt-4 border-t border-border-subtle">
              <form action="/fleet/servers/{{ server.id }}/refresh" method="post" class="flex-1">
                <button type="submit" class="btn-info w-full text-sm py-2">
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                  </svg>
                  Refresh
                </button>
              </form>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    {# Empty State #}
    <div class="card">
      <div class="card-body text-center py-16">
        <svg class="w-16 h-16 mx-auto mb-6 text-purple-400/30" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
        </svg>
        <h3 class="text-xl font-semibold text-text-primary mb-2">No Servers Configured</h3>
        <p class="text-text-secondary mb-6 max-w-md mx-auto">
          Get started by adding your first remote server to monitor its ZFS pools.
          You'll need SSH credentials to connect.
        </p>
        <a href="/fleet/servers/add" class="btn-primary inline-flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Your First Server
        </a>
      </div>
    </div>
  {% endif %}

</div>
{% endblock %}
